{
    "name": "sot/we-are-hiring",
    "description": "Site for We Are Hiring",
    "keywords": ["wordplate", "wordpress", "boilerplate", "plate"],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "php": "^7.0",
        "wordplate/framework": "^6.1",
        "wordplate/plate": "^3.0",
        "wordplate/autoloader": "^1.2",
        "wpackagist-plugin/disable-embeds": "^1.3",
        "wpackagist-plugin/disable-emojis": "^1.7",
        "wpackagist-plugin/normalizer": "^1.0",
        "koodimonni-language/core-sv_se": "^4.8",
        "wpackagist-plugin/better-wp-security": "^6.6"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://wp-languages.github.io"
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}": [
                "type:wordpress-muplugin",
                "type:wordpress-plugin"
            ],
            "public/themes/{$name}": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wordpress",
        "dropin-paths": {
            "public/languages/": ["vendor:koodimonni-language"],
            "public/languages/plugins/": ["vendor:koodimonni-plugin-language"],
            "public/languages/themes/": ["vendor:koodimonni-theme-language"]
        }
    }
}
